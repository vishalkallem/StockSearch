<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/headerPortfolio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/header"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:paddingEnd="16dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/netWorthHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="5dp"
        android:text="@string/net_worth"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/headerPortfolio"
        app:layout_constraintStart_toStartOf="@+id/headerPortfolio"
        app:layout_constraintTop_toBottomOf="@+id/headerPortfolio" />

    <TextView
        android:id="@+id/netWorthTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/netWorthHeader"
        app:layout_constraintStart_toStartOf="@+id/netWorthHeader"
        app:layout_constraintTop_toBottomOf="@+id/netWorthHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>